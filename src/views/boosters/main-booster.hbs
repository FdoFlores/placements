<div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
        <div class="container mt-5 mb-5">
            <div class="row g-0">
                <div class="col-12">
                    <h2>AVAILABLE ORDERS</h2>
                </div>

                <div class="col-12">
                    <div class="level-box bg-white rounded">
                        <div class="d-flex align-items-center p-2 border-bottom">
                            <div class="text-muted">Type:</div>
                            <div class="pink-label ps-2">BOOSTER</div>
                            <div class="ms-auto"> <button class="btn btn-default"> <span class="fas fa-minus"></span> </button> </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="img-container"> <img class="avatarimg" src="https://placekitten.com/50/50" alt="Avatar" width="50px" height="50px"> </div>
                            <div class="ps-3">
                                <div class="fw-600 pb-1">{{user.Correo_Booster}}</div>
                                <p class="m-0 text-grey fs-09">User: {{user.Usuario_Booster}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <br>
                    <div class="container">
                        <div class="table-wrap">
                            <table class="table table-borderless table-responsive table-hover">
                                <thead>
                                    <tr class="table-dark">
                                        <th scope="col">#</th>
                                        <th scope="col">Server</th>
                                        <th scope="col">Type</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Method</th>
                                        <th scope="col">Price</th>
                                    </tr>
                                </thead>
                                <tbody><!--
                                        <tr>
                                            <td scope="row">
                                                <div class="fw-600">1</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">North America</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">Solo/Duo</div>
                                            </td>
                                            <td>
                                                <div class="d-inline-flex align-items-center active">
                                                    <div class="circle"></div>
                                                    <div class="ps-2">Active</div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="fw-600">Duo</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">$ 100.00</div>
                                            </td>
                                        </tr>-->
                                        {{#each allinprogress}}
                                        <tr>
                                            <td scope="row"> 
                                                <div class="fw-600">{{this.ID_Pedido}}</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">{{this.Servidor}}</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">{{this.Modalidad}}<br>{{#if this.Id_ig}}<p style="font-size: 11px;">Credenciales de Riot recibidas.</p>
                                                {{/if}}
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-inline-flex align-items-center active">
                                                    <div class="circle"></div>
                                                    <div class="ps-2">In progress</div>
                                                </div>
                                                <br>
                                                <a href="/auth/ordertake/{{this.ID_Pedido}}" style="all: unset; color:black;"><button class="btn btn-primary btn-sm">Join</button></a>
                                            </td>
                                            <td>
                                                <div class="fw-600">Solo</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">$ {{this.Precio}}</div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                        {{#each allorders}}
                                        <tr>
                                            <td scope="row"> 
                                                <div class="fw-600">{{this.ID_Pedido_Activo}}</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">{{this.Servidor_Activo}}</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">{{this.Modalidad_Activo}}</div>
                                            </td>
                                            <td>
                                                <form action="/auth/takeorder" method="POST">
                                                    <input name="idatomar" type="text" value="{{this.ID_Pedido_Activo}}" style="display: none; visibility: hidden;">
                                                    <button type="submit" value="Tomar orden" class="btn btn-primary btn-sm">Tomar orden</button>
                                                </form>
                                            </td>
                                            <td>
                                                <div class="fw-600">Solo</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">$ 100.00</div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                        {{#each allfinished}}
                                        <tr>
                                            <td scope="row"> 
                                                <div class="fw-600">{{this.ID_Pedido}}</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">{{this.Servidor}}</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">{{this.Modalidad}}</div>
                                            </td>
                                            <td>
                                                <div class="d-inline-flex align-items-center waiting">
                                                    <div class="circle"></div>
                                                    <div class="ps-2">Finished</div>
                                                </div>
                                                <br>
                                                <button class="btn btn-primary btn-sm">Join</button>
                                            </td>
                                            <td>
                                                <div class="fw-600">Solo</div>
                                            </td>
                                            <td>
                                                <div class="fw-600">$ 100.00</div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
     </div>